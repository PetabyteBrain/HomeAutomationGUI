<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeAutomation.TasksPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Create Tasks" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <!-- Button to Add New Task -->
                <Button Text="Add New Task" Clicked="OnAddNewTaskClicked" />

                <!-- StackLayout for Dynamically Added Tasks -->
                <StackLayout x:Name="TaskContainer" Spacing="10">
                    <!-- Tasks will be dynamically added here -->
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>